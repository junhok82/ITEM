<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_one_linear1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBFFC000"
    android:orientation="vertical">

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="2"
        android:stretchColumns="*"
        android:id="@+id/layout_one_table"
        android:visibility="gone"

        >
       <ImageView
            android:id="@+id/iv_home"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/house_1" />

        <TableRow>

            <ImageView
                android:id="@+id/ivt1_1"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/iv_home"
                android:src="@drawable/text1" />

            <ImageView
                android:id="@+id/ivt1_2"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ivt1"
                android:src="@drawable/text2_1" />

            <ImageView
                android:id="@+id/ivt1_3"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ivt2"
                android:src="@drawable/text3_1" />

            <ImageView
                android:id="@+id/ivt1_4"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ivt3"
                android:src="@drawable/text4_1" />

        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/gone_iv1_1"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/select_1"
                android:visibility="visible"
                />

            <ImageView
                android:id="@+id/gone_iv1_2"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/select_1"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/gone_iv1_3"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/select_1"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/gone_iv1_4"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/select_1"
                android:visibility="invisible"
                />

        </TableRow>

    </TableLayout>


    <LinearLayout
        android:id="@+id/window_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.3"
        android:background="@drawable/round_two"
        android:orientation="vertical"
        android:visibility="gone">

        <!--************** 3가지 카테고리 화면 ************ -->

        <LinearLayout
            android:id="@+id/category_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:visibility="visible"
            >
            // 첫번째 카테고리

            <LinearLayout
                android:id="@+id/linear_pay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/id_category_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/click_category_1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/idea"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/idea" />

                        <ImageView
                            android:id="@+id/category_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/category_1" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            // 2번째 카테고리

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/id_category_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/click_category_1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fees"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/fees" />

                        <ImageView
                            android:id="@+id/category_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/category_2" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            // 세번째 카테고리

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/id_category_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/click_category_1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        >

                        <ImageView
                            android:id="@+id/f"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/bank" />

                        <ImageView
                            android:id="@+id/category_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/category_3" />


                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!--************** 전력 이용량 조회 ************ -->
        <LinearLayout
            android:id="@+id/category_layout_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="2.55"
                android:background="@drawable/round_two_in">

                <ImageView
                    android:id="@+id/back1"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/te"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="전력 조회" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/re1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_two_in">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/font_1" />

                <view
                    class="com.example.choi7.item_app.CircleDraw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:background="@drawable/round_one_in"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/time" />

                    <TextView
                        android:id="@+id/now_use_watttext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/text1_3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_one_in"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/day_icon" />

                    <TextView
                        android:id="@+id/day_use_watttext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/text1_4" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!--************** 요금 이용량 조회 ************ -->

        <LinearLayout
            android:id="@+id/category_layout_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="3.5"
                android:background="@drawable/round_two_in"
                >

                <ImageView
                    android:id="@+id/back2"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/back" />


                <TextView
                    android:id="@+id/te2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요금 이용량 조회"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.7"
                android:background="@drawable/round_background"
                android:orientation="vertical"
                android:visibility="visible">

                <com.github.mikephil.charting.charts.CombinedChart
                    android:id="@+id/chart1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/calendar_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/calendar"
                    android:visibility="visible"/>

            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:background="@drawable/buttom_round"
                android:id="@+id/btn_date"
                android:text="날짜 선택하기"
                />


        </LinearLayout>


        <!--************** 하루 목표치 설정 ************ -->
        <LinearLayout
            android:id="@+id/category_layout_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="3.5"
                android:background="@drawable/round_two_in"
                >

                <ImageView
                    android:id="@+id/back3"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/back" />


                <TextView
                    android:id="@+id/te3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목표 설정"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.7"
                android:background="@drawable/round_two_in"
                android:id="@+id/lay3_rel1"
                android:orientation="vertical"
                android:visibility="visible"
                >

                <com.example.choi7.item_app.CircleDisplay
                    android:id="@+id/circleDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.25"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/circleDisplay_text"

                    android:gravity="center"
                    android:textSize="20dp"
                    />


            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:background="@drawable/buttom_round"
                android:id="@+id/goaltext"
                android:text="목표치 설정하기"
                />


        </LinearLayout>


    </LinearLayout>
    </LinearLayout>
