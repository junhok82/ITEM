<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        >
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_logo"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:visibility="gone"/>

        <TextView
            android:textSize="14dp"
            android:layout_margin="10dp"
            android:id="@+id/instructions"
            android:layout_gravity="center"
            android:text="@string/pleaseWait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/deviceToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginBottom="145dp"
            android:gravity="center"
            android:text="@string/registeringDevice"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/click_layout1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_toEndOf="@+id/iv2"
            android:layout_toRightOf="@+id/iv2"
            android:src="@drawable/transparency"
            android:id="@+id/iv1"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/one"
            android:id="@+id/iv2" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv2"
            android:layout_marginTop="29dp"
            android:src="@drawable/text1"
            android:id="@+id/iv3" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/click_layout3">

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_toEndOf="@+id/iv5"
            android:layout_toRightOf="@+id/iv5"
            android:src="@drawable/on_off" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/two" />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv5"
            android:layout_marginTop="29dp"
            android:src="@drawable/text2" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/click_layout2">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_marginLeft="32dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv8"
            android:layout_toRightOf="@+id/iv8"
            android:src="@drawable/big_data"
            android:id="@+id/iv7"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/three"
            android:id="@id/iv8"/>
        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv8"
            android:layout_marginTop="29dp"
            android:src="@drawable/text3"
            android:id="@+id/iv9" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/click_layout4">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_marginLeft="32dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv11"
            android:layout_toRightOf="@+id/iv11"
            android:src="@drawable/wifi_signal"
            android:id="@+id/iv10"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/four"
            android:id="@+id/iv11"/>
        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv11"
            android:layout_marginTop="29dp"
            android:src="@drawable/wifi_text"
            android:id="@+id/iv12" />

    </RelativeLayout>


</LinearLayout>
